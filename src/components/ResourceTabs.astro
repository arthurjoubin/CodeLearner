---
interface Props {
  active: 'news' | 'tools' | 'llms' | 'devfinds' | 'coding-bench';
}

const { active } = Astro.props;

const tabs = [
  { href: '/resources/news', label: 'News', key: 'news' },
  { href: '/resources/tools', label: 'Tools', key: 'tools' },
  { href: '/resources/llms', label: 'LLMs', key: 'llms' },
  { href: '/resources/coding-bench', label: 'Coding Bench', key: 'coding-bench' },
  { href: '/resources/devfinds', label: 'Dev Finds', key: 'devfinds' },
] as const;
---

<div class="flex gap-1 mb-6 overflow-x-auto pb-1 scrollbar-hide">
  {tabs.map((tab) => (
    <a
      href={tab.href}
      class:list={[
        'flex-shrink-0 py-2 px-3 sm:px-4 text-center text-[10px] sm:text-xs font-bold uppercase rounded transition-all border-2 whitespace-nowrap',
        active === tab.key
          ? 'bg-white text-gray-900 border-gray-900'
          : 'bg-white text-gray-500 border-gray-300 hover:text-gray-900 hover:border-gray-400'
      ]}
    >
      {tab.label}
    </a>
  ))}
</div>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
