---
interface Props {
  className?: string;
  showBullet?: boolean;
}

const { className = "", showBullet = true } = Astro.props;
---

<div class={`flex items-baseline gap-3 ${className}`}>
  {showBullet && <div class="w-3 h-3 bg-primary-500 rounded-full flex-shrink-0 self-center" />}
  <slot name="title" />
  <slot name="tag" />
  <span class="block h-1 w-12 bg-primary-500"></span>
</div>

<style>
  .bg-primary-500 {
    background-color: #22c55e;
  }
</style>
