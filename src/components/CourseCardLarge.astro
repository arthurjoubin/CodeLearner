---
interface Props {
  id: string;
  title: string;
  description: string;
  logo: string;
  difficulty: 'beginner' | 'medium' | 'advanced';
  modules: number;
  estimatedTime: string;
  topics: string[];
  learningPath?: string;
}

const { id, title, description, logo, difficulty, modules, estimatedTime, topics, learningPath } = Astro.props;

const difficultyColors = {
  beginner: 'bg-green-100 text-green-700 border-green-300',
  medium: 'bg-yellow-100 text-yellow-700 border-yellow-300',
  advanced: 'bg-red-100 text-red-700 border-red-300'
};
---

<a
  href={`/courses/${id}`}
  class="block p-4 border-2 border-gray-300 rounded-lg bg-white hover:border-primary-500 hover:shadow-lg transition-all group relative overflow-hidden"
>
  <div class="absolute top-0 right-0 w-20 h-20 bg-primary-100 rounded-full -mr-10 -mt-10 opacity-40 group-hover:scale-150 transition-transform duration-500"></div>

  <div class="relative z-10">
    <div class="flex items-start gap-3 mb-3">
      <img
        src={logo}
        alt={title}
        class="w-10 h-10 object-contain flex-shrink-0"
      />
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-0.5">
          <h2 class="font-bold text-base text-gray-900 group-hover:text-primary-700 transition-colors">{title}</h2>
          <span class={`text-[9px] px-1.5 py-0.5 rounded border uppercase font-bold ${difficultyColors[difficulty]}`}>
            {difficulty}
          </span>
          {learningPath && (
            <span class="text-[9px] px-1.5 py-0.5 rounded border uppercase font-bold bg-primary-100 text-primary-700 border-primary-300">
              {learningPath}
            </span>
          )}
        </div>
        <p class="text-xs text-gray-600 line-clamp-2">{description}</p>
      </div>
    </div>

    <div class="flex items-center gap-3 mb-3 text-[11px] text-gray-500">
      <div class="flex items-center gap-1">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <span>{modules} modules</span>
      </div>
      <div class="flex items-center gap-1">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>{estimatedTime}</span>
      </div>
    </div>

    <div class="flex flex-wrap gap-1">
      {topics.slice(0, 5).map(topic => (
        <span class="text-[9px] px-1.5 py-0.5 bg-gray-100 text-gray-600 rounded border border-gray-200">
          {topic}
        </span>
      ))}
    </div>

    <div class="mt-3 pt-3 border-t border-gray-100 flex items-center justify-between">
      <span class="text-[11px] text-gray-500">Start learning</span>
      <span class="text-primary-600 font-bold text-sm group-hover:translate-x-1 transition-transform">â†’</span>
    </div>
  </div>
</a>
