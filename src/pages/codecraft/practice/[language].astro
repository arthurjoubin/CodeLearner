---
import MainLayout from '../../../layouts/MainLayout.astro';
import CodeCraftPracticePage from '../../../pages/_CodeCraftPracticePage';
import { supportedLanguages } from '../../../data/language-exercises';

const { language } = Astro.params;
const lang = supportedLanguages.find(l => l.id === language);

if (!lang) {
  return Astro.redirect('/codecraft');
}
---

<MainLayout title={`${lang.name} Practice - CodeCraft`}>
  <CodeCraftPracticePage client:load language={lang} />
</MainLayout>
