---
import MainLayout from '../../layouts/MainLayout.astro';
import PageTitle from '../../components/PageTitle.astro';
import { supportedLanguages } from '../../data/language-exercises';

// Calculate today's language for the daily challenge
const baseDate = new Date('2024-01-01');
const currentDate = new Date();
const dayIndex = Math.floor(
  (currentDate.getTime() - baseDate.getTime()) / (1000 * 60 * 60 * 24)
);
const dailyLanguage = supportedLanguages[dayIndex % supportedLanguages.length];
const dailyDifficulty = (['easy', 'medium', 'hard'] as const)[dayIndex % 3];

const difficultyLabels: Record<string, string> = {
  easy: 'Easy',
  medium: 'Medium',
  hard: 'Hard'
};

const difficultyColors: Record<string, string> = {
  easy: 'text-green-600 bg-green-100 border-green-300',
  medium: 'text-yellow-600 bg-yellow-100 border-yellow-300',
  hard: 'text-red-600 bg-red-100 border-red-300'
};

const formattedDate = currentDate.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<MainLayout title="Daily Challenge">
  <div class="page-enter max-w-4xl mx-auto py-8 px-4">
    <!-- Today's Challenge Card -->
    <div class="mb-8 md:mb-12">
      <a href="/codecraft/daily" class="block group">
        <div class="relative overflow-hidden rounded-2xl border-2 border-gray-300 bg-white p-6 md:p-12 hover:border-primary-500 hover:shadow-xl transition-all duration-300">
          <!-- Background Decoration -->
          <div class="absolute -right-8 -top-8 w-32 h-32 bg-primary-50 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-500"></div>
          
          <div class="relative flex flex-col items-center text-center">
            <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-primary-100 flex items-center justify-center mb-6 border-2 border-primary-200 group-hover:bg-primary-500 group-hover:border-primary-600 transition-all duration-300">
              <svg class="w-8 h-8 md:w-10 md:h-10 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            
            <h2 class="text-2xl md:text-3xl font-black text-gray-900 uppercase mb-3">Today's Challenge</h2>
            <p class="text-sm md:text-base text-gray-600 mb-6 max-w-lg">Sharpen your skills with a fresh AI-generated exercise every day. Master different languages and build your coding intuition.</p>
            
            <div class="flex flex-wrap justify-center items-center gap-2 md:gap-4 mb-8">
              <div class="px-2.5 py-1 md:px-3 md:py-1.5 bg-gray-100 border border-gray-200 rounded-lg flex items-center gap-2">
                <span class="text-[10px] md:text-xs font-bold text-gray-700 uppercase">{dailyLanguage.name}</span>
              </div>
              <div class={`px-2.5 py-1 md:px-3 md:py-1.5 rounded-lg border-2 flex items-center gap-2 ${difficultyColors[dailyDifficulty]}`}>
                <span class="text-[9px] md:text-[10px] font-black uppercase tracking-widest">
                  {difficultyLabels[dailyDifficulty]}
                </span>
              </div>
              <div class="px-2.5 py-1 md:px-3 md:py-1.5 bg-primary-50 border-2 border-primary-200 rounded-lg">
                <span class="text-primary-700 font-black text-xs md:text-sm">+75 XP</span>
              </div>
            </div>

            <div class="w-full md:w-auto inline-flex items-center justify-center gap-3 bg-gray-900 text-white px-8 py-4 rounded-xl font-black uppercase text-sm group-hover:bg-primary-600 transition-all duration-300 shadow-lg group-hover:shadow-primary-500/25">
              Start Challenge
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </div>
        </div>
      </a>
    </div>

    <!-- History & Stats -->
    <div class="mb-12 md:mb-16">
      <a href="/codecraft/history" class="group flex items-center justify-between p-5 md:p-6 border-2 border-gray-200 rounded-2xl bg-white hover:border-primary-500 hover:shadow-md transition-all">
        <div class="flex items-center gap-3 md:gap-4">
          <div class="w-10 h-10 md:w-12 md:h-12 rounded-xl bg-gray-100 flex items-center justify-center text-gray-500 group-hover:bg-primary-100 group-hover:text-primary-600 transition-colors">
            <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-black text-gray-900 uppercase text-xs md:text-sm tracking-tight">Challenge History</h3>
            <p class="text-[10px] md:text-xs text-gray-500">Access all previous daily exercises</p>
          </div>
        </div>
        <svg class="w-5 h-5 text-gray-300 group-hover:text-primary-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</MainLayout>
