---
import MainLayout from '../../layouts/MainLayout.astro';
import PageTitle from '../../components/PageTitle.astro';
import { supportedLanguages } from '../../data/language-exercises';

// Calculate today's language for the daily challenge
const baseDate = new Date('2024-01-01');
const currentDate = new Date();
const dayIndex = Math.floor(
  (currentDate.getTime() - baseDate.getTime()) / (1000 * 60 * 60 * 24)
);
const dailyLanguage = supportedLanguages[dayIndex % supportedLanguages.length];
const dailyDifficulty = (['easy', 'medium', 'hard'] as const)[dayIndex % 3];

const difficultyLabels: Record<string, string> = {
  easy: 'Easy',
  medium: 'Medium',
  hard: 'Hard'
};

const difficultyColors: Record<string, string> = {
  easy: 'text-green-600 bg-green-100 border-green-300',
  medium: 'text-yellow-600 bg-yellow-100 border-yellow-300',
  hard: 'text-red-600 bg-red-100 border-red-300'
};

const formattedDate = currentDate.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<MainLayout title="Daily Challenge">
  <div class="page-enter max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8 text-center">
      <PageTitle>
        <h1 slot="title" class="text-3xl font-black text-gray-900 uppercase">Daily Challenge</h1>
      </PageTitle>
      <p class="text-gray-600 mt-2">{formattedDate}</p>
    </div>

    <!-- Today's Challenge Card -->
    <div class="mb-8">
      <a href="/codecraft/daily" class="block group">
        <div class="relative overflow-hidden rounded-lg border-2 border-accent-500 bg-gradient-to-r from-accent-50 to-accent-100 p-8 hover:shadow-lg transition-shadow">
          <div class="flex flex-col items-center text-center">
            <div class="w-16 h-16 rounded-lg bg-accent-500 flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h2 class="text-2xl font-black text-gray-900 uppercase mb-2">Today's Challenge</h2>
            <p class="text-gray-600 mb-4">A new coding challenge every day. Complete it to earn 75 XP!</p>
            <div class="flex items-center gap-3 mb-4">
              <span class="text-sm font-bold text-gray-700">{dailyLanguage.name}</span>
              <span class={`text-xs font-bold uppercase tracking-wider px-2 py-1 rounded border ${difficultyColors[dailyDifficulty]}`}>
                {difficultyLabels[dailyDifficulty]}
              </span>
              <span class="text-accent-600 font-bold">+75 XP</span>
            </div>
            <div class="inline-flex items-center gap-2 bg-accent-500 text-white px-6 py-3 rounded-lg font-bold uppercase text-sm group-hover:bg-accent-600 transition-colors">
              Start Today's Challenge
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </div>
        </div>
      </a>
    </div>

    <!-- History Link -->
    <div class="text-center">
      <a href="/codecraft/history" class="inline-flex items-center gap-2 text-gray-600 hover:text-accent-600 font-bold uppercase text-sm transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        View Challenge History
      </a>
    </div>

    <!-- How it Works -->
    <div class="mt-12 border-2 border-gray-300 rounded-lg p-6 bg-gray-50">
      <h2 class="text-lg font-bold text-gray-900 mb-4 text-center uppercase">How It Works</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="flex flex-col items-center text-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-accent-100 flex items-center justify-center text-accent-600 font-bold border-2 border-accent-200">1</div>
          <div>
            <h3 class="font-bold text-gray-900 mb-1">Daily Challenge</h3>
            <p class="text-sm text-gray-600">A new AI-generated challenge every day in a rotating language</p>
          </div>
        </div>
        <div class="flex flex-col items-center text-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-accent-100 flex items-center justify-center text-accent-600 font-bold border-2 border-accent-200">2</div>
          <div>
            <h3 class="font-bold text-gray-900 mb-1">Code & Validate</h3>
            <p class="text-sm text-gray-600">Write your solution and get instant AI-powered feedback</p>
          </div>
        </div>
        <div class="flex flex-col items-center text-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-accent-100 flex items-center justify-center text-accent-600 font-bold border-2 border-accent-200">3</div>
          <div>
            <h3 class="font-bold text-gray-900 mb-1">Earn XP</h3>
            <p class="text-sm text-gray-600">Complete the challenge to earn 75 XP and build your streak</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
