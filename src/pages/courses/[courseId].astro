---
import MainLayout from '../../layouts/MainLayout.astro';
import CoursePage from '../../pages/_CoursePage';

const courseTitles: Record<string, string> = {
  react: 'React',
  'advanced-topics': 'Web Stack',
  'git-mastery': 'Git',
  'javascript-core': 'JavaScript',
  'html-css-tailwind': 'HTML & CSS',
  fastapi: 'FastAPI',
  backend: 'Backend',
  'dev-environment': 'Terminal & CLI',
  'frontend-production': 'Engineering Practices',
  'node-express': 'Node.js & Express',
  'databases': 'Databases & SQL',
  'auth-security': 'Backend Advanced',
  'internet-tools': 'Internet Tools',
  'nextjs': 'Next.js',
  'deployment': 'Deployment',
  'architecture-patterns': 'Architecture Patterns',
};

export function getStaticPaths() {
  return [];
}

const { courseId } = Astro.params;
const pageTitle = courseId ? courseTitles[courseId] || courseId : 'Course';
---

<MainLayout title={pageTitle}>
	<CoursePage client:load courseId={courseId} />
</MainLayout>
