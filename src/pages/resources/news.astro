---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

const news = (await getCollection('news')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

function formatDate(date: Date) {
	return date.toLocaleDateString('en-US', {
		day: 'numeric',
		month: 'short',
		year: 'numeric'
	});
}
---

<MainLayout title="AI News">
	<div class="page-enter max-w-4xl mx-auto">
		<div class="mb-4">
			<a href="/resources" class="text-xs text-gray-500 hover:text-primary-600 uppercase font-bold flex items-center gap-1 mb-3">
				<span class="w-1.5 h-1.5 bg-primary-500 rounded-full" />
				Back to Resources
			</a>
			<div class="flex items-center justify-between">
				<div class="relative inline-block">
					<h1 class="text-xl font-black text-gray-900 uppercase">AI News</h1>
					<span class="absolute -bottom-0.5 left-0 w-12 h-0.5 bg-primary-500" />
				</div>
				<div class="flex gap-2 text-xs">
					<a href="/resources/tools" class="px-2 py-1 border border-gray-300 rounded hover:bg-gray-100 transition-colors">Tools</a>
					<a href="/resources/llms" class="px-2 py-1 border border-gray-300 rounded hover:bg-gray-100 transition-colors">LLMs</a>
					<a href="/resources/deals" class="px-2 py-1 border border-gray-300 rounded hover:bg-gray-100 transition-colors">Deals</a>
				</div>
			</div>
			<p class="text-sm text-gray-500 mt-1">Latest updates on AI tools and trends</p>
		</div>

		<table class="w-full text-sm">
			<thead>
				<tr class="border-b-2 border-gray-300">
					<th class="text-left py-2 px-3 font-bold text-gray-700 uppercase text-xs w-32">Date</th>
					<th class="text-left py-2 px-3 font-bold text-gray-700 uppercase text-xs w-40">Tag</th>
					<th class="text-left py-2 px-3 font-bold text-gray-700 uppercase text-xs">Title</th>
				</tr>
			</thead>
			<tbody>
				{news.map((article) => (
					<tr class="border-b border-gray-200 hover:bg-gray-50">
						<td class="py-2 px-3 text-gray-500">{formatDate(article.data.pubDate)}</td>
						<td class="py-2 px-3">
							<span class="text-[10px] px-2 py-0.5 bg-gray-100 text-gray-600 rounded font-bold uppercase">{article.data.tags[0]}</span>
						</td>
						<td class="py-2 px-3">
							<a href={`/resources/news/${article.slug}`} class="font-medium text-gray-900 hover:text-primary-600 truncate block">{article.data.title}</a>
						</td>
					</tr>
				))}
			</tbody>
		</table>
	</div>
</MainLayout>
